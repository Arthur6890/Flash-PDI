{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist", // Diretório onde os arquivos transpilados serão gerados
    "rootDir": "./src", // Diretório de origem do código TypeScript
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false, // Defina como true se quiser evitar "any" implicitamente
    "typeRoots": ["./node_modules/@types", "./src/@types"], // Diretórios para as definições de tipos
    "lib": ["ESNext", "DOM"] // Libs que você deseja usar
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
